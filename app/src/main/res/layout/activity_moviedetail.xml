<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="detailMovie"
            type="com.example.rxjavalog.ui.MovieDetailActivity" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:text="@{detailMovie.title}"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:hint="제목"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_detail_subTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:hint="세부 제목"
                    android:text="@{detailMovie.subtitle}"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_detail_title" />

                <LinearLayout
                    android:id="@+id/layout_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="#efefef"
                    app:layout_constraintTop_toBottomOf="@id/tv_detail_subTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    android:orientation="horizontal" />

                <TextView
                    android:id="@+id/tv_info"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:text="@string/info"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/text_shape"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/layout_line"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_detail_pubDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="@{detailMovie.pubDate}"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:hint="개봉년도"
                    app:layout_constraintTop_toBottomOf="@id/tv_info"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_detail_director"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{detailMovie.director}"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:hint="감독"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_detail_pubDate"
                    app:layout_constraintStart_toStartOf="@id/tv_detail_director"/>

                <TextView
                    android:id="@+id/tv_detail_actor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{detailMovie.actor}"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:hint="주연"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_detail_director"
                    app:layout_constraintStart_toStartOf="@id/tv_detail_pubDate" />

                <TextView
                    android:id="@+id/tv_ur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="네이버 영화 평점 : "
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_detail_actor"
                    app:layout_constraintStart_toStartOf="@id/tv_detail_pubDate"/>

                <RatingBar
                    android:id="@+id/rb_naverUserRating"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:numStars="5"
                    android:max="5"
                    android:rating="0"
                    android:stepSize="0.5"
                    bind_rating="@{detailMovie.naverUserRating}"
                    app:layout_constraintBottom_toBottomOf="@id/tv_ur"
                    app:layout_constraintStart_toEndOf="@id/tv_ur"
                    app:layout_constraintTop_toTopOf="@id/tv_ur" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{detailMovie.naverUserRating}"
                    android:layout_marginStart="10dp"
                    android:hint="0.00"
                    app:layout_constraintStart_toEndOf="@id/rb_naverUserRating"
                    app:layout_constraintTop_toTopOf="@id/rb_naverUserRating"
                    app:layout_constraintBottom_toBottomOf="@id/rb_naverUserRating"/>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:background="@android:color/holo_green_dark"
                    android:onClick="@{() -> detailMovie.naverMovieIntent()}"
                    app:layout_constraintTop_toBottomOf="@id/tv_ur"
                    app:layout_constraintStart_toStartOf="@id/tv_detail_pubDate">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_baseline_open_in_browser_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NAVER LINK"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center"/>

                </LinearLayout>




            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:layout_scrollFlags="scroll">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/colorPrimary"
                app:expandedTitleMarginBottom="30dp"
                app:expandedTitleMarginStart="32dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    bind_image="@{detailMovie.image}"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/ic_baseline_movie_24"
                    app:layout_collapseMode="parallax" />

                <com.google.android.material.appbar.MaterialToolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:onClick="@{() -> detailMovie.finish()}"
                        android:src="@drawable/ic_baseline_close_24" />
                </com.google.android.material.appbar.MaterialToolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
