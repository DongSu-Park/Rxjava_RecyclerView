<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="itemViewHolder"
            type="com.example.rxjavalog.adapter.ViewHolder" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <ImageView
                android:id="@+id/iv_movie_image"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_movie_24"
                app:bind_image="@{itemViewHolder.image}"/>

            <TextView
                android:id="@+id/tv_movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{itemViewHolder.title}"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@id/iv_movie_image"
                app:layout_constraintTop_toTopOf="@id/iv_movie_image" />

            <TextView
                android:id="@+id/tv_movie_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{itemViewHolder.subTitle}"
                android:layout_marginTop="2dp"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tv_movie_title"
                app:layout_constraintStart_toStartOf="@id/tv_movie_title"/>

            <TextView
                android:id="@+id/tv_movie_pubdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{itemViewHolder.pubDate}"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_movie_subtitle"
                app:layout_constraintStart_toStartOf="@id/tv_movie_title"/>

            <TextView
                android:id="@+id/tv_movie_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{itemViewHolder.director}"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/tv_movie_pubdate"
                app:layout_constraintStart_toStartOf="@id/tv_movie_title" />

            <TextView
                android:id="@+id/tv_movie_actor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@{itemViewHolder.actor}"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_movie_director"
                app:layout_constraintStart_toStartOf="@id/tv_movie_title" />

            <TextView
                android:id="@+id/tv_movie_naverUserRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@{itemViewHolder.naverUserRating}"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_movie_actor"
                app:layout_constraintStart_toStartOf="@id/tv_movie_title"/>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_margin="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
